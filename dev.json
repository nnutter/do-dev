{
  "builders": [
    {
      "type": "digitalocean",
      "image": "fedora-27-x64",
      "region": "nyc1",
      "size": "s-1vcpu-1gb",
      "ssh_username": "root",
      "snapshot_name": "dev-{{timestamp}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline":[
        "dnf install --assumeyes git",
        "dnf install --assumeyes unzip",
        "dnf install --assumeyes vim-enhanced",
        "dnf clean all"
      ]
    }
  ]
}
