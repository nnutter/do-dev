{
  "builders": [
    {
      "type": "digitalocean",
      "image": "fedora-27-x64",
      "region": "nyc1",
      "size": "s-1vcpu-1gb",
      "ssh_username": "root",
      "snapshot_name": "dev-{{timestamp}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline":[
        "dnf install --assumeyes git",
        "dnf install --assumeyes unzip",
        "dnf install --assumeyes vim-enhanced",
        "dnf clean all",
        "curl -LO 'https://releases.hashicorp.com/packer/1.2.1/packer_1.2.1_linux_amd64.zip'",
        "unzip -d /usr/local/bin/ packer_1.2.1_linux_amd64.zip",
        "rm -f packer_1.2.1_linux_amd64.zip"
      ]
    }
  ]
}
